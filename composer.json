{
    "name": "faresnassar09/api-vault",
    "description": "A fluent Laravel package for standardized API responses, smart pagination, and page-aware caching.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "laravel",
        "api",
        "response",
        "pagination",
        "caching",
        "fluent-api",
        "apivault"
    ],
    "authors": [
        {
            "name": "Fares Ahmed",
            "email": "fares.ahmed.nassar0@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^9.0|^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "FaresNassar\\ApiVault\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FaresNassar\\ApiVault\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "FaresNassar\\ApiVault\\ApiVaultServiceProvider"
            ]
        }
    },
    "require-dev": {
        "pestphp/pest": "^2.34",
        "orchestra/testbench": "^8.0"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}